<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="script/script.js" defer></script>
    <link rel="stylesheet" href="styling/fonts.css" />
    <link rel="stylesheet" href="styling/login.css" />
  </head>
  <body>
    <%- include('login-register-partials/header') %>

    <main>
      <ul id="tabs">
        <li class="tab" data-form="login">Login</li>
        <li class="tab" data-form="register">Register</li>
      </ul>
      <div class="square">
        <div class="form-container" id="loginForm">
          <form action="/login" method="post">
            <div>
              <label for="username">Username</label>
              <input type="text" name="username" />
            </div>
            <div>
              <label for="password">Password</label>
              <input type="password" name="password" />
            </div>
            <div>
              <input type="submit" value="Sign in" id="submit" />
            </div>
          </form>
        </div>

        <div class="form-container" id="registerForm">
          <form action="/register" method="post">
            <div>
              <label for="name">Name</label>
              <input type="text" name="name" />
            </div>
            <div>
              <label for="username">Username</label>
              <input type="text" name="username" />
            </div>
            <div>
              <label for="password">Password</label>
              <input type="password" name="password" />
            </div>
            <div>
              <label for="academic_num">Academic ID</label>
              <input type="text" name="academic_num" />
            </div>
            <div>
              <label for="specialization">Peminatan:</label>
              <select name="specialization" id="specialization">
                <option value="CS">Computing Science</option>
                <option value="DS">Data Science</option>
              </select>
            </div>
            <div>
              <input type="submit" value="Register" id="submit2" />
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('login-register-partials/footer') %>
  </body>
</html>
